<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeContent %></p>

<% posts.forEach(function(post) { %>

  <h1><%= post.title %></h1>

  <% if (post.body.length > 100) { %>
      <% let postPreview = post.body.substring(0, 100) + '... '; %>
      <p>
      <%= postPreview %>
      <a href="<%= '/posts/' + lodash.kebabCase(post.title) %>">Read More</a>
      </p>
  <% } else { %>
    <p><%= post.body %></p>
  <% }; %>

<% }); %>

<%- include('partials/footer'); -%>
